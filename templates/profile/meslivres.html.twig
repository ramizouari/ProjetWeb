{% extends "profile/index.html.twig" %}


{% block title %}
My Books
{% endblock %}

{% block body %}

{{ parent() }}



    <div id="conteneur" style="display:flex;flex-direction: row; flex-wrap: wrap ; justify-content: space-around">

    {% for livre in meslivres   %}

         {%   if meslivres == null %}

           <h1> il n'ya pas des livres</h1>

        {% endif %}

        <div class="" style="margin-left:10px">

        <a href="{{ path('livre',{'bookId':livre.id}) }}">

            <div style="width:250px" class="card float-left">

                <div class="card-body"> 
                <img style="width: 200px;height: 270px" class="card-img-top" src="{{asset('book_photo/'~livre.headshot)}}" 
                    alt="Card image cap">

                </div>

                <div class="card-header " style="margin-bottom: 0px;padding-left: 0px;padding-right: 0px; align-content: normal">

                    <h5 class="card-title text-center" style="font-size: 100% ; font-family: Helvetica, Arial, sans-serif ;color:orange">{{  livre.title}}</h5>

                </div>
            </div>
         </a>
        </div>




{% endfor %}

    </div>




<nav aria-label="Page navigation example " style=" position:relative;
    left:50%; clear: left">

        <ul class="pagination">

            <li class="page-item"><a class="page-link" href="{{ url( route ,{"page": page-1 })  }}">Previous</a></li>

            {% for i in 1 .. nbpages %}

                <li class="page-item"><a class="page-link" href="{{ url( route,{"page":i}) }}"> {{ i }} </a></li>

             {% endfor %}

            <li class="page-item"><a class="page-link" href="{{ url( route,{"page": page+1 }) }}">Next</a></li>

        </ul>


</nav>
</div>

{% endblock %}