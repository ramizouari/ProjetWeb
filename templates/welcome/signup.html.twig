{% extends 'base2.html.twig' %}

{% block title %}Book Exchanger{% endblock %}

{% block body %}

    {{ parent() }}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<fieldset>
<legend>Fill the form</legend>
{{ form_start(sign_up,{"attr":{"class":"form-group"}}) }}
    {{ form_errors(sign_up) }}

    <div class="form-group">
      {{form_label(sign_up.firstName,"First Name")}}
    {{ form_widget(sign_up.firstName,{"attr":{"class":"form-control"}}) }}
    </div>
      <div class="form-group">
      {{form_label(sign_up.lastName,"Last Name")}}
    {{ form_widget(sign_up.lastName,{"attr":{"class":"form-control"}}) }}
    </div>
      <div class="form-group">
      {{form_label(sign_up.username,"Username")}}
    {{ form_widget(sign_up.username,{"attr":{"class":"form-control"}}) }}
    </div>
      <div class="form-group">
      {{form_label(sign_up.email,"Email Address")}}
    {{ form_widget(sign_up.email,{"attr":{"class":"form-control"}}) }}
    </div>
      <div class="form-group">
      {{form_label(sign_up.plainPassword,"Password")}}
    {{ form_widget(sign_up.plainPassword,{"attr":{"class":"form-control"}}) }}
    </div>
       <div class="form-group">
      {{form_label(sign_up.phoneNumber,"Phone Number")}}
    {{ form_widget(sign_up.phoneNumber,{"attr":{"class":"form-control"}}) }}
    </div>
    {{form_end(sign_up)}}
         <a href="{{ path('app_login') }}" class="small">Already have an Account? </a>

</fieldset>
{% endblock %}
